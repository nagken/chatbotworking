# PSS Knowledge Assist Environment Configuration

# Application Settings
APP_NAME=PSS Knowledge Assist
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
PORT=8080
LOG_LEVEL=INFO

# Database Configuration - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DEV_DB_NAME=pss_knowledge_assist_dev
TEST_DB_NAME=pss_knowledge_assist_test
PROD_DB_NAME=pss_knowledge_assist_prod

# Database Performance Settings
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=1800
CACHE_MAX_SIZE_MB=100
CACHE_CLEANUP_INTERVAL=300

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Google Cloud Configuration (if needed for LLM service)
GCP_PROJECT_ID=your-gcp-project-id
BILLING_PROJECT=your-billing-project
LOCATION=global
BASE_URL=https://geminidataanalytics.googleapis.com

# Data source configuration (not needed for PSS Knowledge Assist)
# BQ_DATASET=
# BQ_TABLE=
